{% extends 'base.html.twig' %}

{% block title %}Property{% endblock %}

{% block body %}
    <h1>Property</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ property.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ property.name }}</td>
            </tr>
            <tr>
                <th>MarketName</th>
                <td>{{ property.marketName }}</td>
            </tr>
            <tr>
                <th>MaxCapacity</th>
                <td>{{ property.maxCapacity }}</td>
            </tr>
            <tr>
                <th>MinCapacity</th>
                <td>{{ property.minCapacity }}</td>
            </tr>
            <tr>
                <th>CheckinTime</th>
                <td>{{ property.checkinTime ? property.checkinTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CheckoutTime</th>
                <td>{{ property.checkoutTime ? property.checkoutTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ property.createdAt ? property.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ property.updatedAt ? property.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_property_index') }}">back to list</a>

    <a href="{{ path('app_property_edit', {'id': property.id}) }}">edit</a>

    {{ include('property/_delete_form.html.twig') }}
{% endblock %}
