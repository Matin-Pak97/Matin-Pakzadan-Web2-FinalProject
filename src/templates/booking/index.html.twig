{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>BookingStartDate</th>
                <th>BookingEndDate</th>
                <th>NumberOfGuest</th>
                <th>ExtraGuestTotalPrice</th>
                <th>TotalBookingPrice</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.bookingStartDate ? booking.bookingStartDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.bookingEndDate ? booking.bookingEndDate|date('Y-m-d') : '' }}</td>
                <td>{{ booking.numberOfGuest }}</td>
                <td>{{ booking.extraGuestTotalPrice }}</td>
                <td>{{ booking.totalBookingPrice }}</td>
                <td>{{ booking.status }}</td>
                <td>{{ booking.createdAt ? booking.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.updatedAt ? booking.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
