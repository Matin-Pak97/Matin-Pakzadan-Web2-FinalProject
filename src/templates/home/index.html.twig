{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome to <b>Easy Booking</b></h1>

    <h3>Here you can see available property:</h3>
    <div>
        <table class="table">
            <thead>
            <tr>
                <th>MarketName</th>
                <th>MaxCapacity</th>
                <th>MinCapacity</th>
                <th>CheckinTime</th>
                <th>CheckoutTime</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for property in properties %}
                <tr>
                    <td>{{ property.marketName }}</td>
                    <td>{{ property.maxCapacity }}</td>
                    <td>{{ property.minCapacity }}</td>
                    <td>{{ property.checkinTime ? property.checkinTime|date('H:i:s') : '' }}</td>
                    <td>{{ property.checkoutTime ? property.checkoutTime|date('H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_booking_new', {'id': property.id}) }}">Reserve</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
